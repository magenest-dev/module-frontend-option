$urlGoogleFront = $block->getGoogleFont();
$fontName = $block->getFontName();
$canApplyGoogleFont = $block->canApplyGoogleFont();
?>
<?php if ($fontName && $urlGoogleFront): ?>
    <link href="<?= $urlGoogleFront ?>" rel="stylesheet">
    <?php if ($canApplyGoogleFont): ?>
        <style>
            body {
                font-family: <?=$fontName?> !important;
            }
        </style>
    <?php endif; ?>
<?php endif; ?>
